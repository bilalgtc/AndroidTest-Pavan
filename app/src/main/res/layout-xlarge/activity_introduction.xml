<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto">

<TextView
    android:id="@+id/s_txt1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_20sdp"
    android:layout_marginEnd="@dimen/_25sdp"
    android:fontFamily="@font/encode_sans_bold"
    android:text="@string/signIn"
    android:textColor="#4552CB"
    android:textSize="@dimen/_12ssp"
    android:layout_alignParentEnd="true"
    android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/ll22"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_190sdp"
        android:layout_below="@+id/s_txt1"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical"
        />

<com.tbuonomo.viewpagerdotsindicator.DotsIndicator
    android:id="@+id/dots"
    android:layout_width="@dimen/_55sdp"
    android:layout_height="@dimen/_3sdp"
    android:layout_below="@id/ll22"
    android:layout_marginTop="@dimen/_60sdp"
    android:layout_centerInParent="true"
    app:dotsColor="#E6E7F8"
    app:dotsSize="@dimen/_8sdp"
    app:selectedDotColor="#F1A852"/>


<androidx.viewpager.widget.ViewPager
    android:id="@+id/viewpager"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_340sdp"
    android:layout_below="@+id/s_txt1">

</androidx.viewpager.widget.ViewPager>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next_btn"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@id/viewpager"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/btn1_style"
        android:fontFamily="@font/encode_sans_bold"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView8"
        android:layout_width="@dimen/_132sdp"
        android:layout_height="@dimen/_5sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/_8sdp"
        android:tint="#BBC3CE"
        android:src="@drawable/home2" />
</RelativeLayout>